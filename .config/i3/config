# Lors du passage à un workspace, retaper le raccourci de ce workspace ramène à celui dont je viens
workspace_auto_back_and_forth yes

# Assigne le bureau 2 à Vivaldi
assign [class="Vivaldi"] 2

# Alterne entre les bordures (default | 1pixel | none)
bindsym $mod+b border toggle

mode "Commande" {
        bindsym v exec vivaldi; mode "default"

        bindsym Return mode "default"
        bindsym Escape mode "default"
}
bindsym $mod+c mode "Commande"

mode "Kill" {
        bindsym c exec killall conky; mode "default"

        bindsym Return mode "default"
        bindsym Escape mode "default"
}
bindsym $mod+t mode "Kill"

mode "Langue" {
        bindsym j exec ibus engine mozc-jp; mode "default"
        bindsym f exec ibus engine xkb:fr::fra; mode "default"

        bindsym Return mode "default"
        bindsym Escape mode "default"
}
bindsym $mod+o mode "Langue"

